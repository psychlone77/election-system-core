{
  "name": "election-system-core",
  "private": true,
  "workspaces": [
    "servers/*",
    "shared"
  ],
  "scripts": {
    "start:e": "npm --workspace servers/eligibility-server run start",
    "start:b": "npm --workspace servers/ballot-box-server run start",
    "start:t": "npm --workspace servers/tallying-server run start",
    "start:all": "concurrently \"npm run start:e\" \"npm run start:b\" \"npm run start:t\""
  },
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
